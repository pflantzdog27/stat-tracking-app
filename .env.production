# Production Environment Variables
# Copy this file to .env.production.local and fill in actual values

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/stat_tracking?schema=public
POSTGRES_DB=stat_tracking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Next.js
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret_here
API_SECRET_KEY=your_api_secret_here

# Redis
REDIS_URL=redis://redis:6379

# External APIs
NHL_API_URL=https://statsapi.web.nhl.com/api/v1
SPORTS_DATA_API_KEY=your_sports_data_api_key

# CDN and Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=stat-tracking-assets
CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Monitoring
MONITORING_API_KEY=your_monitoring_api_key
SENTRY_DSN=your_sentry_dsn
GRAFANA_PASSWORD=your_grafana_password

# Security
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Performance
CACHE_TTL=3600
DATABASE_CONNECTION_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# Features
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SOCIAL_SHARING=true

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=stat-tracking-backups